server {
    listen 80;
    server_name quprdigital.tk www.quprdigital.tk;

    # Redirect to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name quprdigital.tk www.quprdigital.tk;

    # SSL Configuration
    ssl_certificate /etc/letsencrypt/live/quprdigital.tk/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/quprdigital.tk/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;

    # Security Headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Logs
    access_log /var/log/nginx/quprdigital_access.log;
    error_log /var/log/nginx/quprdigital_error.log;

    # Static files
    location /static {
        alias /path/to/QuprDigital/app/static;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }

    # Application
    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_redirect off;
    }

    # Max upload size
    client_max_body_size 10M;
}
